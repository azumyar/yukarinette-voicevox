<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <RootNamespace>Yarukizero.Net.Yularinette.VoiceVox</RootNamespace>
    <LangVersion>10</LangVersion>
    <VersionPrefix>0.5.0</VersionPrefix>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DebugType>none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Web" />
    <Reference Include="System.Windows" />
    <Reference Include="System.Windows.Presentation" />
    <Reference Include="WindowsBase" />
    <Reference Include="YukarinetteInterface">
      <HintPath>Lib\YukarinetteInterface.dll</HintPath>
    </Reference>
	<PackageReference Include="NAudio" Version="2.1.0" />
	<PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
	<PackageReference Include="ReactiveProperty" Version="9.0.0" />
  </ItemGroup>
</Project>
